{eunit_opts, [verbose]}.
{deps, []}.

{pre_hooks, [{"(linux|darwin|solaris)", compile, "make -C c_src all"},
             {"(freebsd)", compile, "gmake -C c_src all"}
            ]}.

{post_hooks, [{"(linux|darwin|solaris)", clean, "make -C c_src clean"},
              {"(freebsd)", clean, "gmake -C c_src clean"}
             ]}.
