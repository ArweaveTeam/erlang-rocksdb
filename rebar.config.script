NumSchedulers=integer_to_list(
                erlang:system_info(schedulers)
               ),
PreHooks={pre_hooks,
           [
            {"(linux|darwin|solaris)", compile, "make -j" ++ NumSchedulers ++ " -C c_src all"},
            {"(freebsd|openbsd)", compile, "gmake -j" ++ NumSchedulers ++ " -C c_src all"}
           ]},
lists:keyreplace(pre_hooks, 1, CONFIG, PreHooks).
